{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "branchPrefix": "renovate/",
  "additionalBranchPrefix": "{{{manager}}}/",
  "labels": ["dependencies", "renovate"],
  "commitMessagePrefix": "⬆️ Bump ",
  "commitMessageAction": "",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": " to {{newVersion}}",
  "packageRules": [
    {
      "matchPackagePatterns": ["^next$", "^react$", "^react-dom$", "^eslint-config-next$", "^next-"],
      "groupName": "next/react ecosystem"
    },
    {
      "matchPackagePatterns": ["^@nextui-org/"],
      "groupName": "nextui"
    },
    {
      "matchPackagePatterns": ["^tailwindcss$", "^postcss$"],
      "groupName": "css tooling"
    },
    {
      "matchPackagePatterns": ["^framer-motion$"],
      "groupName": "animations (framer-motion)"
    },
    {
      "matchPackagePatterns": ["^@tabler/icons-react$"],
      "groupName": "tabler icons"
    },
    {
      "matchPackagePatterns": ["^eslint$"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["^color-name-list$", "^nearest-color$"],
      "groupName": "color utilities"
    }
  ]
}
